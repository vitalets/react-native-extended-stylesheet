{
  "name": "react-native-extended-stylesheet",
  "version": "0.1.0",
  "description": "Extended StyleSheets for React Native",
  "author": {
    "name": "Vitaliy Potapov",
    "email": "noginsk@rambler.ru"
  },
  "main": "src/index.js",
  "scripts": {
    "lint": "eslint src",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/vitalets/react-native-extended-stylesheet.git"
  },
  "bugs": {
    "url": "https://github.com/vitalets/react-native-extended-stylesheet/issues"
  },
  "license": "MIT",
  "devDependencies": {
    "babel-jest": "^6.0.1",
    "babel-preset-react-native": "^1.1.0",
    "eslint": "^1.10.3",
    "eslint-plugin-react": "^3.16.1",
    "eslint-plugin-react-native": "^0.5.0",
    "ghooks": "^1.0.1",
    "jest-cli": "^0.8.2",
    "react-native": "^0.18.1"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run lint && npm test"
    }
  },
  "jest": {
    "testPathDirs": [
      "src"
    ],
    "testRunner": "node_modules/jest-cli/src/testRunners/jasmine/jasmine2",
    "scriptPreprocessor": "node_modules/babel-jest",
    "setupEnvScriptFile": "src/__tests__/env.js",
    "testFileExtensions": [
      "test.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "modulePathIgnorePatterns": [
      "/node_modules/"
    ],
    "unmockedModulePathPatterns": [
      "react-native-mock"
    ],
    "verbose": true,
    "collectCoverage": false
  }
}
